@{
    ViewData["Title"] = "Kuaför";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kuaför Yönetim Sistemi</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Kuaför Yönetim Sistemi</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Anasayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Profil">Profil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Randevu">Randevu Al</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/AI">AI</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h1 class="text-center">Kuaför Yönetim Paneli</h1>
        <p class="text-center">Kuaför işlemlerinizi yönetmek için bu paneli kullanabilirsiniz.</p>
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Çalışan Yönetimi</h5>
                        <p class="card-text">Kuaför çalışanlarınızı görüntüleyin ve düzenleyin.</p>
                        <a href="#" class="btn btn-primary">Çalışanları Yönet</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Randevular</h5>
                        <p class="card-text">Randevu detaylarını görüntüleyin ve yönetin.</p>
                        <a href="#" class="btn btn-primary">Randevuları Yönet</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
